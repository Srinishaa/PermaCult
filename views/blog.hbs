<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="images/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="css/blog.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Palette+Mosaic&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lobster&display=swap"
      rel="stylesheet"
    />
    <title>Blog Page</title>
  </head>
  <body>
    <div class="block1" style="width: 100%; height: 60%;">
      <div class="d-flex">
        <a class="navbar-brand" href="index.html">
          <img src="images/logo.png" class="logo" alt="logo" />
        </a>
        <div class="ms-auto nav-item">
          <a class="items" href="/">Home</a>
          <a class="items" href="blog">Blog</a>
          <a class="items" href="contact">Contact</a>
        </div>
      </div>
      <div>
        <div class="center-text"><strong>BLOGS</strong></div>
      </div>
    </div>
    <br />
    <div>
        {{#each data}}
        <div class="card">
          <h5 class="card-header">{{title}}</h5>
          <div class="card-body">
              {{#if url }}
              <img src={{url}} />
              {{/if}}
            <p class="card-text">{{content}}</p>
          </div>
        </div>
    {{/each}}
    </div>

    <br /><br />
    <div class="compose-btn">
      <p><button
          class="button"
          type="button"
          class="btn btn-primary"
          data-toggle="modal"
          data-target="#exampleModal"
          id="myBtn"
        >COMPOSE</button>
        To add your experiences, click on
        <span style="color:#59D07A">COMPOSE</span></p>
      <div id="myModal" class="modal">
          <form action="/blog" method="post">
        <div class="modal-content">
          <span class="close">&times;</span>
          <strong><h5>COMPOSE</h5></strong>
          <label>TITLE</label><br />
          <input name="title" type="text" required><br />
          <label>IMAGE URL(optional)</label><br />
          <input name="url" type="text" /><br />
          <label>PUBLISH</label><br />
          <textarea name="content" rows="5" required></textarea><br />
          <input class="button" id="submitBtn" type="submit"/>
          </form>

        </div>
      </div>
    </div>

  </body>
    <script src="../blog.js"></script>
</html>